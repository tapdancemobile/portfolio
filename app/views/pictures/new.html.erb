<h1><%= @picture.title %></h1>

<div class = "row">
	<div class = "span6 offset3">

<%= form_for @picture, :html => { :multipart => true } do |f| %>

<%= render 'layouts/error_messages', object: f.object %>

	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.file_field :image %>

	<%= f.hidden_field :project_id %>

	<%= f.submit "Save image", class: "btn btn-large btn-primary"%>

<% end %>