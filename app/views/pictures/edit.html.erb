<h1><%= @picture.title %></h1>

<div class = "row">
	<div class = "span6 offset3">

<%= image_tag @picture.image.url%>

<%= form_for @picture, :html => { :multipart => true } do |f| %>

	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.file_field :image %>

	<%= hidden_field_tag "project_id", @project.id %>

	<%= f.submit "Save image", class: "btn btn-large btn-primary"%>

<% end %>